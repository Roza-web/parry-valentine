<script>
const noBtn=document.getElementById("no");
const area=document.getElementById("area");

function move(){
  const a=area.getBoundingClientRect();
  const b=noBtn.getBoundingClientRect();
  noBtn.style.left=Math.random()*(a.width-b.width)+"px";
  noBtn.style.top=Math.random()*(a.height-b.height)+"px";
}

noBtn.addEventListener("mouseenter",move);
noBtn.addEventListener("touchstart",e=>{e.preventDefault();move();},{passive:false});
noBtn.addEventListener("click",e=>{e.preventDefault();move();});

document.getElementById("yes").onclick=()=>{
  document.body.innerHTML="<h1 style='text-align:center;margin-top:40vh;'>ğŸ¥° YESSS! ğŸ’</h1>";
};
</script>
